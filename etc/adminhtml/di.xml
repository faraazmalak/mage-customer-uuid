<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Quarry\CustomerUuid\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Quarry\CustomerUuid\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">customLogHandler</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Quarry\CustomerUuid\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Quarry\CustomerUuid\Observer\CustomerSaveBeforeObserver">
        <arguments>
            <argument name="customer_repo" xsi:type="object">Magento\Customer\Api\CustomerRepositoryInterface</argument>
            <argument name="logger" xsi:type="object">Quarry\CustomerUuid\Logger\Logger</argument>
        </arguments>
    </type>
</config>
